<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="260dp"
    app:cardCornerRadius="10dp"
    android:layout_marginRight="15dp"
    android:elevation="13dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#F6A122">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:id="@+id/fruitnamee"
        android:layout_marginTop="12dp"
        android:textColor="#000"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruit Name"
        />

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/fruitcostt"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruit Name"
            />

        <TextView

            android:id="@+id/fruitamount"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/fruitcostt"
            android:layout_marginRight="4dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Can No)"
            />

        <ImageView

            android:layout_centerInParent="true"
            android:src="@drawable/cart"
            android:layout_below="@+id/fruitamount"
            android:layout_marginTop="8dp"
            android:id="@+id/fruitimagee"
            android:layout_width="100dp"
            android:layout_height="75dp"
            />

        <TextView
            android:id="@+id/fruitdescriptionn"
            android:layout_below="@+id/fruitimagee"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="8dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruit Description"
            android:ellipsize="end"
            android:maxLines="3"
            />

        <Button

            android:layout_centerInParent="true"
            android:id="@+id/addcart_buttonn"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/fruitdescriptionn"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="Add to Cart"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:textAllCaps="false" />



    </RelativeLayout>


</android.support.v7.widget.CardView>